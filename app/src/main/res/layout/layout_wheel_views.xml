<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wheel_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.kn.spinwheelpoc.WheelItemView
            android:id="@+id/wheel_item_1"
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp0"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="@id/rim_image"
        app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="@id/rim_image"
            app:layout_constraintStart_toStartOf="@id/rim_image"
            app:layout_constraintTop_toTopOf="@id/rim_image" />


    <com.kn.spinwheelpoc.WheelItemView
        android:id="@+id/wheel_item_2"
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp0"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="@id/rim_image"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="@id/rim_image"
        app:layout_constraintStart_toStartOf="@id/rim_image"
        app:layout_constraintTop_toTopOf="@id/rim_image" />


    <com.kn.spinwheelpoc.WheelItemView
        android:id="@+id/wheel_item_3"
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp0"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="@id/rim_image"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="@id/rim_image"
        app:layout_constraintStart_toStartOf="@id/rim_image"
        app:layout_constraintTop_toTopOf="@id/rim_image" />


    <com.kn.spinwheelpoc.WheelItemView
        android:id="@+id/wheel_item_4"
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp0"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="@id/rim_image"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="@id/rim_image"
        app:layout_constraintStart_toStartOf="@id/rim_image"
        app:layout_constraintTop_toTopOf="@id/rim_image" />

        <com.kn.spinwheelpoc.WheelItemView
            android:id="@+id/wheel_item_5"
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/dp0"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="@id/rim_image"
        app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="@id/rim_image"
            app:layout_constraintStart_toStartOf="@id/rim_image"
            app:layout_constraintTop_toTopOf="@id/rim_image" />


        <com.kn.spinwheelpoc.WheelItemView
            android:id="@+id/wheel_item_6"
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp0"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="@id/rim_image"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="@id/rim_image"
            app:layout_constraintStart_toStartOf="@id/rim_image"
            app:layout_constraintTop_toTopOf="@id/rim_image" />

        <ImageView
            android:layout_width="@dimen/dp36"
            android:layout_height="@dimen/dp36"
            android:src="@drawable/center_dot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/rim_image"
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp0"
            android:src="@drawable/rim"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.kn.spinwheelpoc.WheelOverlayView
        android:id="@+id/wheel_overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</merge>